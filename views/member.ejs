<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <h1 class="mb-3 fw-bold text-danger"><i class="bi bi-people-fill"></i> Daftar Member</h1>
      <a href="/member/add" class="btn btn-success mt-2 mb-3 shadow-sm"><i class="bi bi-person-plus-fill"></i> Tambah Member</a>

      <% if (msg.length !== 0) { %>
        <div class="alert alert-success mt-4 animate__animated animate__fadeIn" role="alert">
          <i class="bi bi-check-circle-fill"></i> <%= msg %> 
        </div>
      <% } %>

      <table class="table table-striped table-hover mt-3 shadow-sm rounded">
        <thead class="table-danger">
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">Umur</th>
            <th scope="col">Nomor HP</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (members.length === 0) { %>
            <tr>
              <td colspan="5">
                <div class="alert alert-danger animate__animated animate__fadeIn" role="alert">
                  <i class="bi bi-exclamation-triangle-fill"></i> Data member masih kosong kaka
                </div>
              </td>
            </tr>
          <% } %>
          <% members.forEach((member, i) => { %>          
            <tr class="align-middle">
              <th scope="row"><span class="badge bg-danger"><%= ++i %></span></th>
              <td><b><%= member.nama %></b></td>
              <td><%= member.umur %></td>
              <td><%= member.nohp %></td>
              <td>
                <a href="/member/<%= member.nama %>" class="btn btn-primary btn-sm rounded-pill shadow-sm"><i class="bi bi-info-circle-fill"></i> Detail</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>