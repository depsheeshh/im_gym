<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Tambah Data Member</h2>

            <% if (typeof errors !== 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(error => { %>
                            <li><%= error.msg %></li>
                        <% }) %>
                    </ul>
                  </div>
            <% } %>

            <form action="/member/?_method=PUT" method="post" class="shadow-lg p-4 rounded-4 bg-white">
              <input type="hidden" name="_id" value="<%= member._id %>" />
              <input type="hidden" name="oldNama" value="<%= member.oldNama || member.nama %>"/>
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama : </label>
                  <input type="text" class="form-control" id="nama" name="nama" required value="<%= member.nama %>">
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email : </label>
                  <input type="email" class="form-control" id="email" name="email" required value="<%= member.email %>">
                </div>
                <div class="mb-3">
                  <label for="umur" class="form-label">Umur : </label>
                  <input type="number" class="form-control" id="umur" name="umur" required value="<%= member.umur %>">
                </div>
                <div class="mb-3">
                  <label for="nohp" class="form-label">Nomor HP : </label>
                  <input type="number" class="form-control" id="nohp" name="nohp" required value="<%= member.nohp %>">
                </div>
                <button type="submit" class="btn btn-primary">Update Member</button>
              </form>
        </div>
    </div>
</div>